<div class="card-header">
	<h3>Comentarios</h3>
</div>
<div class="card-body">
	<ul id="posts_list">
		<% @posts.each do |post| %>
		<li class="mb-3 mt-3">
			<%= image_tag(post.user.cl_image_props, class: 'avatar') unless post.user.cl_image_props.nil? %>
			<%= post.user.name %> : <%= post.comment %>			
		</li> 
		<% end %>
	</ul>
</div>